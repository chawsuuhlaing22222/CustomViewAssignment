<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomUiComponentsAssignment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryText</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="DialogStatusBar" parent="Theme.CustomUiComponentsAssignment">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Set parent theme as app theme. -->
    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="tabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="tabTextColor">@color/colorSecondaryText</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TaskBar" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
</resources>