<?xml version="1.0" encoding="utf-8"?>
<com.padc.csh.customuicomponentsassignment.viewpods.ProfileInfoViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<FrameLayout
    android:id="@+id/flProfile"
    android:layout_marginTop="-50dp"
    app:layout_constraintTop_toTopOf="@id/rlUserInfo"
    app:layout_constraintEnd_toEndOf="@id/rlUserInfo"
    app:layout_constraintStart_toStartOf="@id/rlUserInfo"
    android:elevation="@dimen/margin_medium_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.padc.csh.customuicomponentsassignment.customComponents.CircleProfileImageView
        android:id="@+id/vpProfile"
        app:srcCompat="@drawable/ic_person1"
        app:cornerRadius="70dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:layout_height="140dp"
        android:layout_width="140dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivOnlineStatus"
        app:srcCompat="@drawable/ic_baseline_circle_24"
        app:tint="@color/colorAccent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:elevation="@dimen/margin_medium"
        android:layout_marginStart="110dp"
        android:layout_width="@dimen/margin_medium_2"
        android:layout_height="@dimen/margin_medium_2"/>
</FrameLayout>


        <RelativeLayout
            android:id="@+id/rlUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_large"
            android:paddingEnd="@dimen/margin_large"
            android:layout_marginTop="@dimen/dimen_50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_profile_in_profile_scrn"
           >



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvClosedTask"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/margin_medium_2"
                android:text="@string/lbl_closed_tasks"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_small"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvClosedTaskCount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvClosedTask"
                android:layout_marginTop="@dimen/margin_card_medium_2"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_horizontal"
                android:text="234"
                android:textColor="@color/black" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOpenTask"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/margin_medium_2"
                android:text="@string/open_tasks"
                android:textSize="@dimen/text_small"
                android:textColor="@color/colorSecondaryText" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOpenTaskCount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvOpenTask"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_card_medium_2"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_horizontal"
                android:text="23"
                android:textColor="@color/black" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUserName"
                android:text="Chaw Suu Hlaing"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/text_heading_1x"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tvClosedTaskCount"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPositionName"
                android:text="UI Designer"
                android:textSize="@dimen/text_regular_2x"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/colorSecondaryText"
                android:layout_below="@id/tvUserName"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>




</com.padc.csh.customuicomponentsassignment.viewpods.ProfileInfoViewPod>